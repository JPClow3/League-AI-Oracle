{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    // Keep your API rewrite (though often optional)
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    // Add the SPA fallback rewrite
    {
      "source": "/((?!api/|assets/).*)", // Match anything NOT starting with /api/ or /assets/
      "destination": "/index.html"      // Serve the main HTML file
    }
  ],
  "headers": [
    // Keep your existing headers for caching and security
    // BUT REMOVE THE MANUAL Content-Type HEADERS for JS/CSS
    {
      "source": "/assets/(.*)", // General rule for assets
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    // Remove specific JS/CSS Content-Type headers here...
    // Keep the global security headers
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
        // Add any other security headers you need
      ]
    }
  ]
}
